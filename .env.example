# SUBSTITUA PELO SEU:
OPENAI_API_KEY=sk-proj-xxx-seu-token-aqui-xxx
# =====================================
# FLASK CONFIGURATION
# =====================================
FLASK_ENV=production
FLASK_DEBUG=False

# Gere com: python -c "import secrets; print(secrets.token_hex(16))"
